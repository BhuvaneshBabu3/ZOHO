#include<stdio.h>
void main()
{
    int arr[10]={2,5,23,67,21,35,76,87,1,3},even_arr[10],odd_arr[10],len=10,inc1,inc2;
    inc1=0,inc2=0;
    for (int i = 0; i < len; ++i) {
        if (arr[i]%2==0)
        {
            even_arr[inc1]=arr[i];
            inc1++;
        }
        else
        {
            odd_arr[inc2]=arr[i];
            inc2++;
        }
    }
    printf("\n Given array :");
    for (int i = 0; i < len; ++i) {
        printf("%d ",arr[i]);
    }
    printf("\n Even array : ");
    for (int i = 0; i < inc1; ++i) {
        printf("%d ",even_arr[i]);
    }
    printf("\n odd array : ");
    for (int i = 0; i < inc2; ++i) {
        printf("%d ",odd_arr[i]);
    }
}
